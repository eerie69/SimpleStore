@using KazahStore.Extensions
﻿@using KazahStore.ViewModels
@using Microsoft.AspNetCore.Identity;
@model HomeViewModel
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@{
    ViewData["Title"] = "Home Page";
}


<section class="bg-dark space-lg" data-jarallax data-speed="0.2" id="maime">
    <div class="my-window">
    <img alt="Image" src="/img/GopImage.jpg" class="bg-image position-absolute opacity-20" id="skaree" />
    </div>
    
    <div class="container">
        <div class="row align-items-center justify-content-between">
            @if (SignInManager.IsSignedIn(User))
            {
                <ul class="row feature-list feature-list-sm">
                    @foreach (var item in Model.Stores)
                    {
                        <li class="col-12 col-md-6 col-lg-4">
                            <div class="card">
                                <a href="#">
                                    <img class="card-img-top" src="@item.Image" alt="Card image cap">
                                </a>
                                <div class="card-body">
                                    <a href="#">
                                        <h4 class="card-title">@item.Title</h4>
                                        <p class="card-text text-body">@item.Description</p>
                                    </a>
                                </div>
                                <div class="card-footer card-footer-borderless d-flex justify-content-between">
                                    <div class="text-small">
                                        <ul class="list-inline">
                                            <li class="list-inline-item"><i class="icon-heart"></i> 221</li>
                                            <li class="list-inline-item"><i class="icon-message"></i> 14</li>
                                        </ul>
                                    </div>
                                    <div class="dropup">
                                        <a type="btn btn-success" asp-controller="Store" asp-action="Detail" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                        <div class="dropdown-menu dropdown-menu-sm" aria-labelledby="SidekickButton">
                                            <a class="dropdown-item" href="#">Save</a>
                                            <a class="dropdown-item" href="#">Share</a>
                                            <a class="dropdown-item" href="#">Comment</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="#">Report</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="col-12 col-md-6 col-lg-5 section-intro">
                    <h1 class="display-3" style="font-style:italic">WELCOME</h1>
                    <span class="lead">
                        Пройдя через несколько простых шагов        станьте участником нашего сообщества!
                    </span>
                </div>
                <!--end of col-->
                <div class="col-12 col-md-6 col-lg-5">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Index">
                                <div class="form-group">
                                    <label asp-for="Register.UserName">Имя участника:</label>
                                    <input asp-for="Register.UserName" type="text" class="form-control form-control-lg" placeholder="Pick a username">
                                    <span asp-validation-for="Register.UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Register.EmailAddress">Эл. почта:</label>
                                    <input asp-for="Register.EmailAddress" type="email" class="form-control form-control-lg" placeholder="Enter email">
                                    <span asp-validation-for="Register.EmailAddress" class="text-danger"></span>
                                    <small id="emailHelp" class="form-text">We'll never share your email with anyone else.</small>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Register.Password">Пароль:</label>
                                    <input asp-for="Register.Password" type="password" class="form-control form-control-lg" placeholder="Password">
                                    <span asp-validation-for="Register.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Register.ConfirmPassword" class="control-label"></label>
                                    <input asp-for="Register.ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="ConfirmPassword">
                                    <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" value="agree" name="agree-terms" id="check-agree">
                                        <label class="custom-control-label text-small" for="check-agree">
                                            Я согласен с <a href="#">Terms &amp; Conditions</a>
                                        </label>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-lg btn-success btn-block">Присойдениться в сообщество</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
            
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
